<?xml version="1.0" encoding="utf-8"?>
<!-- activity_gpa.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for grades -->
    <EditText
        android:id="@+id/editText_grades_gpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Grades (comma separated)"/>

    <!-- Input field for credits -->
    <EditText
        android:id="@+id/editText_credits_gpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Credits (comma separated)"/>

    <!-- Button to calculate GPA -->
    <Button
        android:id="@+id/button_calculate_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate GPA"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>


    <!-- TextView to display result -->
    <TextView
        android:id="@+id/textView_result_gpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:paddingTop="16dp"/>

</LinearLayout>
